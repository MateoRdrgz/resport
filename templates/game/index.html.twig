{% extends 'base.html.twig' %}

{% block title %}Hello GameController!{% endblock %}

{% block body %}
<style>
    .game-list { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .game-list ul { list-style-type: none; padding: 0; }
    .game-list li { background: #F5F5F5; margin: 0.5em 0; padding: 0.5em; border-radius: 4px; }
</style>

<div class="game-list">
    <h1>Liste des jeux</h1>
    <ul>
        {% for game in games %}
            <li>{{ game.name }}</li>
        {% else %}
            <li>Aucun jeu disponible.</li>
        {% endfor %}
    </ul>
</div>
{% endblock %}